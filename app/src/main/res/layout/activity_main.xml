<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="410dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="NotSibling">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GUIA DA CIDADE DE SOROCABA"
                android:gravity="center"
                android:textSize="28sp"
                />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="123dp"
                android:layout_height="116dp"
                app:srcCompat="@mipmap/download"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pontos Turísticos"
                android:textSize="22sp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zoológico Municipal"
                android:textSize="15sp"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                app:srcCompat="@mipmap/zoologicosorocaba" />

            <Button
                android:id="@+id/btn_smzoo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Saiba Mais" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jardim Botânico"
                android:textSize="15sp"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="174dp"
                app:srcCompat="@mipmap/jardimbot" />

            <Button
                android:id="@+id/btn_smjdbot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saiba Mais" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Catedral Metropolitana de Sorocaba Nossa Senhora da Ponte "
                android:gravity="center"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="177dp"
                app:srcCompat="@mipmap/cate" />

            <Button
                android:id="@+id/btn_smcate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saiba Mais" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>